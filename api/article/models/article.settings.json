{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true,
      "targetField": "title"
    },
    "users_permissions_user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "article"
    },
    "article_categories": {
      "collection": "article-category"
    },
    "article_tags": {
      "collection": "article-tags"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "global.seo",
      "required": true
    }
  }
}
